@using sportsShopWebApp.Models


<section>

    <table class="table" style="margin:6vh">
            <thead class="thead-dark">
                <tr class="bg-success"> <th scope="col">TypeOfShoe</th> <th scope="col">Company</th> <th scope="col">Model</th> <th scope="col">Price</th> <th scope="col">Quantity</th> <th scope="col">HaveDiscount</th> <th scope="col">ImageData</th> </tr>
            </thead>

            <tbody>
                @foreach (Shoe item in Model)
                {
                    <tr scope="row"><td>@item.typeOfShoe</td><td>@item.company</td><td>@item.model</td><td>@item.price</td><td>@item.quantity</td><td>@item.haveDiscount</td><td><img class="img-circle" src="@item.imageData" style="width:45px;height:45px" /></td></tr>
                }
            </tbody>
        </table>
</section>